<h1>Please Enter Your Details</h1>

<form action="/students" method="post">

  <label for="first-name-field">First Name:</label>
  <input type="text" name="first_name" id="first-name-field">
  <br>
  <br>
  <label for="second-name-field">Second Name:</label>
  <input type="text" name="second_name" id="second-name-field">
  <br>
  <br>
  <label for="age-field">Age:</label>
  <input type="number" name="age" id="age-field" min="1">
  <br>
  <br>
  <label for="house_select">Select House:</label>
      <select name="house_id" id="house_select">
        <% @houses.each do |house| %>
            <option value=<%= house.id %>><%= house.name.capitalize %></option>
        <% end %>
      </select>
  <br>
  <br>
  <input type="submit" value="Add Student">

</form>
